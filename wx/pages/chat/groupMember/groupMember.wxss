/* groupMember.wxss */

page {
	width: 100%;
	height: 100%;
	font-family: Source Han Sans CN;
}

.member-layer {
	display: flex;
	flex-direction: column;
	position: fixed;
	left: 0;
	right: 0;
	z-index: 1000;
	height: 100%;
	background: #FFFFFF;
}

.exit-icon {
	padding-left: 20rpx;
	line-height: 120rpx;
	font-size: 36rpx;
	color: #FFFFFF;
}

.header-group-name {
	flex: 1;
	display: flex;
	align-items: center;
	justify-content: center;
	height: 100%;
	color: #FFFFFF;
}

.member {
	padding: 10rpx;
	margin-top: 10rpx;
}

.avatar {
	width: 96rpx;
	height: 96rpx;
	min-width: 96rpx;
	min-height: 96rpx;
}

.group-member-avatar {
	margin-right: 10rpx;
	margin-bottom: 10rpx;
}