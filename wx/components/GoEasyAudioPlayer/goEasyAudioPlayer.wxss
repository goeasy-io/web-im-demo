
.goeasy-audio-player {
	-webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

.audio-facade {
	display: flex;
	align-items: center;
	min-width: 80rpx;
	max-width: 300rpx;
	height: 60rpx;
	padding: 6rpx 10rpx;
	border-radius: 14rpx;
	line-height: 30rpx;
	background: #D02129;
	font-size: 24rpx;
	color: #ffffff;
}

.audio-facade .audio-play-icon {
	-moz-transform: rotate(180deg);
	-webkit-transform: rotate(180deg);
	-o-transform: rotate(180deg);
	transform: rotate(180deg);
}

.audio-facade-bg {
	width: 40rpx;
	height: 35rpx;
}

.record-second {
	padding-left: 14rpx;
}